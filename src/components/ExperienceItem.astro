---
interface Props {
  title: string;
  description: string;
  date: string;
}
const { title, description, date } = Astro.props;
---

<div
  class="absolute size-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-sky-200/80"
  >{date}</time
>
<h3 class="text-lg font-semibold text-sky-200 mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-gray-200 text-pretty">
  {description}
</p>
