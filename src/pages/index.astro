---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefcaseIcon from "../components/icons/BriefcaseIcon.astro";
---

<Layout
	title="Portafolio de Luis Llanos - Desarrollador y Programador Web"
	description="Desarrollador y Programador Web"
>
	<main class="px-4">
		<SectionContainer>
			<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
				Hola, soy Luis <div class="flex justify-center items-center">
					<Badge>Disponible para trabajar</Badge>
				</div>
			</h1>
			<h2 class="text-2xl opacity-90 text-wrap">
				Lorem ipsum dolor sit amet consectetur adipisicing elit. Debitis
				excepturi nulla dolorem inventore sequi ipsam eligendi numquam quis
				natus necessitatibus delectus vitae quia ullam amet cumque, deserunt
				laboriosam asperiores? Repellendus.
			</h2>
			<nav class="flex gap-x-4 mt-8">
				<SocialPill href="https://www.linkedin.com/in/luisllanoslucas/">
					<LinkedInIcon class="size-6" />
					Linkedin
				</SocialPill>
				<SocialPill href="https://github.com/ljllanosl">
					<GithubIcon class="size-6" />
					Github
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer>
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
				<BriefcaseIcon class="size-7" />
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>
	</main>
</Layout>
